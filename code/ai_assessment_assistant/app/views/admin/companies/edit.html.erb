<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-8" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-4">
        <li>
          <%= link_to admin_root_path, class: "text-gray-400 hover:text-gray-500" do %>
            Dashboard
          <% end %>
        </li>
        <li>
          <svg class="flex-shrink-0 h-5 w-5 text-gray-300" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </li>
        <li>
          <%= link_to admin_companies_path, class: "text-gray-400 hover:text-gray-500" do %>
            Companies
          <% end %>
        </li>
        <li>
          <svg class="flex-shrink-0 h-5 w-5 text-gray-300" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </li>
        <li>
          <%= link_to admin_company_path(@company), class: "text-gray-400 hover:text-gray-500" do %>
            <%= @company.name %>
          <% end %>
        </li>
        <li>
          <svg class="flex-shrink-0 h-5 w-5 text-gray-300" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
        </li>
        <li class="text-gray-500">Edit</li>
      </ol>
    </nav>

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Edit Company</h1>
      <p class="mt-2 text-gray-600">
        Update company information and AI agent instructions for <%= @company.name %>
      </p>
    </div>

    <!-- Form Card -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-8">
        <%= render 'form', company: @company %>
      </div>
    </div>

    <!-- Warning Section -->
    <div class="mt-8 bg-yellow-50 border border-yellow-200 rounded-lg p-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Important Notes</h3>
          <div class="mt-2 text-sm text-yellow-700">
            <ul class="list-disc pl-5 space-y-1">
              <li><strong>AI Instructions:</strong> Changes to custom instructions will apply to all future assessments for this company</li>
              <li><strong>Active Assessments:</strong> Ongoing assessments will continue using the previous instructions</li>
              <li><strong>Company Name:</strong> Changing the company name will update all related records</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Company Stats -->
    <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-white p-6 rounded-lg shadow">
        <div class="text-2xl font-bold text-blue-600"><%= @company.stakeholders.count %></div>
        <div class="text-gray-600">Stakeholders</div>
      </div>
      <div class="bg-white p-6 rounded-lg shadow">
        <div class="text-2xl font-bold text-green-600"><%= @company.assessments.completed.count %></div>
        <div class="text-gray-600">Completed Assessments</div>
      </div>
      <div class="bg-white p-6 rounded-lg shadow">
        <div class="text-2xl font-bold text-purple-600"><%= @company.completion_rate %>%</div>
        <div class="text-gray-600">Completion Rate</div>
      </div>
    </div>
  </div>
</div>
